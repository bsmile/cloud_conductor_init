source /opt/cloudconductor/lib/common.sh

EVENT_HANDLER_DIR="<%= @event_handlers_directory %>"
LOG_FILE="${LOG_DIR}/event-handler.log"

log_info "event-handler has started with: SERF_TAG_ROLE[${SERF_TAG_ROLE}], SERF_EVENT[${SERF_EVENT}], SERF_USER_EVENT[${SERF_USER_EVENT}]"

export PATH=`chefdk_path`:${PATH}
action_runner_result="`ruby ${EVENT_HANDLER_DIR}/action_runner.rb`"
if [ $? -ne 0 ]; then
  log_error "finished abnormally. action_runner has failed."
  log_error "${action_runner_result}"
  exit -1
fi

log_info "finished successfully."
